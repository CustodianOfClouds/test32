import java.io.*;
import java.util.*;

public class LZWTool {

    public static void main(String[] args) {
        String mode = null;
        int minW = 9, maxW = 16;
        String policy = "freeze";
        String alphabetPath = null;

        // Parse CLI arguments
        for (int i = 0; i < args.length; i++) {
            switch (args[i]) {
                case "--mode": mode = args[++i]; break;
                case "--minW": minW = Integer.parseInt(args[++i]); break;
                case "--maxW": maxW = Integer.parseInt(args[++i]); break;
                case "--policy": policy = args[++i]; break;
                case "--alphabet": alphabetPath = args[++i]; break;
                default:
                    System.err.println("Unknown argument: " + args[i]);
                    System.exit(2);
            }
        }

        // Validate args
        if (mode == null) {
            System.err.println("Error: --mode is required");
            System.exit(1);
        }

        // Run chosen mode
        if (mode.equals("compress")) {
            if (alphabetPath == null || minW > maxW) {
                System.err.println("Error: Invalid arguments");
                System.exit(1);
            }
            List<String> alphabet = loadAlphabet(alphabetPath);
            if (alphabet == null) {
                System.err.println("Error: Could not load alphabet");
                System.exit(1);
            }
            compress(minW, maxW, policy, alphabet);
        } else if (mode.equals("expand")) {
            expand();
        } else {
            System.err.println("Error: --mode must be 'compress' or 'expand'");
            System.exit(1);
        }
    }

    // Load alphabet file, handle CR/LF, and ensure uniqueness
    private static List<String> loadAlphabet(String path) {
        List<String> alphabet = new ArrayList<>();
        Set<String> seen = new LinkedHashSet<>();

        try (FileReader fr = new FileReader(path)) {
            StringBuilder lineBuffer = new StringBuilder();
            int c;
            while ((c = fr.read()) != -1) {
                if (c == '\n') {
                    if (lineBuffer.length() == 0) {
                        // Empty line: add LF and CR
                        if (seen.add("\n")) alphabet.add("\n");
                        if (seen.add("\r")) alphabet.add("\r");
                    } else {
                        String symbol = String.valueOf(lineBuffer.charAt(0));
                        if (seen.add(symbol)) alphabet.add(symbol);
                    }
                    lineBuffer.setLength(0);
                } else lineBuffer.append((char)c);
            }
            // Handle End of File, last line
            if (lineBuffer.length() > 0) {
                String symbol = String.valueOf(lineBuffer.charAt(0));
                if (seen.add(symbol)) alphabet.add(symbol);
            }
        } catch (IOException e) { return null; }

        // Ensure LF/CR exist
        if (seen.add("\n")) alphabet.add("\n");
        if (seen.add("\r")) alphabet.add("\r");
        return alphabet;
    }

    // Write compression header
    private static void writeHeader(int minW, int maxW, String policy, List<String> alphabet) {
        BinaryStdOut.write(minW, 8);
        BinaryStdOut.write(maxW, 8);

        int policyCode;
        switch (policy) {
            case "reset": policyCode = 1; break;
            case "lru": policyCode = 2; break;
            case "lfu": policyCode = 3; break;
            default: policyCode = 0; break;
        }
        BinaryStdOut.write(policyCode, 8);
        BinaryStdOut.write(alphabet.size(), 16);
        for (String symbol : alphabet)
            BinaryStdOut.write(symbol.charAt(0), 8);
    }

    // Header container
    private static class Header {
        int minW, maxW;
        String policy;
        List<String> alphabet;
    }

    // Read compression header
    private static Header readHeader() {
        Header h = new Header();
        h.minW = BinaryStdIn.readInt(8);
        h.maxW = BinaryStdIn.readInt(8);

        int policyCode = BinaryStdIn.readInt(8);
        switch (policyCode) {
            case 1: h.policy = "reset"; break;
            case 2: h.policy = "lru"; break;
            case 3: h.policy = "lfu"; break;
            default: h.policy = "freeze"; break;
        }

        int alphabetSize = BinaryStdIn.readInt(16);
        h.alphabet = new ArrayList<>(alphabetSize);
        for (int i = 0; i < alphabetSize; i++)
            h.alphabet.add(String.valueOf(BinaryStdIn.readChar(8)));
        return h;
    }

    // Optimized LRU tracking - timestamp based
    private static class LRUTracker {
        private final HashMap<String, Integer> timestampMap;
        private int timestamp = 0;

        LRUTracker(int capacity) {
            this.timestampMap = new HashMap<>(capacity);
        }

        void use(String key) {
            timestampMap.put(key, timestamp++);
        }

        String findLRU() {
            if (timestampMap.isEmpty()) return null;
            
            String lruKey = null;
            int minTimestamp = Integer.MAX_VALUE;
            
            for (Map.Entry<String, Integer> entry : timestampMap.entrySet()) {
                if (entry.getValue() < minTimestamp) {
                    minTimestamp = entry.getValue();
                    lruKey = entry.getKey();
                }
            }
            return lruKey;
        }

        void remove(String key) {
            timestampMap.remove(key);
        }

        boolean contains(String key) {
            return timestampMap.containsKey(key);
        }
    }

    // Optimized LRU tracker for decoder
    private static class LRUTrackerDecoder {
        private final HashMap<Integer, Integer> timestampMap;
        private int timestamp = 0;

        LRUTrackerDecoder(int capacity) {
            this.timestampMap = new HashMap<>(capacity);
        }

        void use(int code) {
            timestampMap.put(code, timestamp++);
        }

        int findLRU() {
            if (timestampMap.isEmpty()) return -1;
            
            int lruCode = -1;
            int minTimestamp = Integer.MAX_VALUE;
            
            for (Map.Entry<Integer, Integer> entry : timestampMap.entrySet()) {
                if (entry.getValue() < minTimestamp) {
                    minTimestamp = entry.getValue();
                    lruCode = entry.getKey();
                }
            }
            return lruCode;
        }

        void remove(int code) {
            timestampMap.remove(code);
        }
    }

    // Optimized LFU tracking - frequency + timestamp for tie-breaking
    private static class LFUTracker {
        private final HashMap<String, Integer> frequencyMap;
        private final HashMap<String, Integer> timestampMap;
        private int timestamp = 0;

        LFUTracker(int capacity) {
            this.frequencyMap = new HashMap<>(capacity);
            this.timestampMap = new HashMap<>(capacity);
        }

        void use(String key) {
            frequencyMap.put(key, frequencyMap.getOrDefault(key, 0) + 1);
            timestampMap.put(key, timestamp++);
        }

        String findLFU() {
            if (frequencyMap.isEmpty()) return null;
            
            String lfuKey = null;
            int minFreq = Integer.MAX_VALUE;
            int oldestTime = Integer.MAX_VALUE;

            for (Map.Entry<String, Integer> entry : frequencyMap.entrySet()) {
                String key = entry.getKey();
                int freq = entry.getValue();
                int time = timestampMap.get(key);

                // Find least frequently used, break ties by oldest timestamp
                if (freq < minFreq || (freq == minFreq && time < oldestTime)) {
                    minFreq = freq;
                    oldestTime = time;
                    lfuKey = key;
                }
            }
            return lfuKey;
        }

        void remove(String key) {
            frequencyMap.remove(key);
            timestampMap.remove(key);
        }

        boolean contains(String key) {
            return frequencyMap.containsKey(key);
        }
    }

    // Optimized LFU tracker for decoder
    private static class LFUTrackerDecoder {
        private final HashMap<Integer, Integer> frequencyMap;
        private final HashMap<Integer, Integer> timestampMap;
        private int timestamp = 0;

        LFUTrackerDecoder(int capacity) {
            this.frequencyMap = new HashMap<>(capacity);
            this.timestampMap = new HashMap<>(capacity);
        }

        void use(int code) {
            frequencyMap.put(code, frequencyMap.getOrDefault(code, 0) + 1);
            timestampMap.put(code, timestamp++);
        }

        int findLFU() {
            if (frequencyMap.isEmpty()) return -1;
            
            int lfuCode = -1;
            int minFreq = Integer.MAX_VALUE;
            int oldestTime = Integer.MAX_VALUE;

            for (Map.Entry<Integer, Integer> entry : frequencyMap.entrySet()) {
                int code = entry.getKey();
                int freq = entry.getValue();
                int time = timestampMap.get(code);

                // Find least frequently used, break ties by oldest timestamp
                if (freq < minFreq || (freq == minFreq && time < oldestTime)) {
                    minFreq = freq;
                    oldestTime = time;
                    lfuCode = code;
                }
            }
            return lfuCode;
        }

        void remove(int code) {
            frequencyMap.remove(code);
            timestampMap.remove(code);
        }
    }

    // Compression with all policies
    private static void compress(int minW, int maxW, String policy, List<String> alphabet) {
        writeHeader(minW, maxW, policy, alphabet);

        TSTmod<Integer> codebook = new TSTmod<>();
        int nextCode = 0;
        int alphabetSize = alphabet.size();

        // Init dictionary with alphabet
        for (String symbol : alphabet)
            codebook.put(new StringBuilder(symbol), nextCode++);

        int EndCode = nextCode++;
        
        // Policy flags
        boolean resetPolicy = policy.equals("reset");
        boolean lruPolicy = policy.equals("lru");
        boolean lfuPolicy = policy.equals("lfu");
        
        int RESET_CODE = resetPolicy ? nextCode++ : -1;
        int initialNextCode = nextCode;

        // Create policy trackers
        LRUTracker lruTracker = lruPolicy ? new LRUTracker(1 << maxW) : null;
        LFUTracker lfuTracker = lfuPolicy ? new LFUTracker(1 << maxW) : null;

        // Preload alphabet keys for reset mode
        StringBuilder[] alphabetKeys = null;
        if (resetPolicy) {
            alphabetKeys = new StringBuilder[alphabetSize];
            for (int i = 0; i < alphabetSize; i++)
                alphabetKeys[i] = new StringBuilder(alphabet.get(i));
        }

        int W = minW;
        int maxCode = (1 << maxW);

        // Handle empty input
        if (BinaryStdIn.isEmpty()) { 
            BinaryStdOut.close(); 
            return; 
        }

        char c = BinaryStdIn.readChar();
        StringBuilder current = new StringBuilder().append(c);

        // Main encoding loop
        while (!BinaryStdIn.isEmpty()) {
            c = BinaryStdIn.readChar();
            StringBuilder next = new StringBuilder(current).append(c);

            if (codebook.contains(next)) {
                current = next;
            } else {
                Integer currentCode = codebook.get(current);
                BinaryStdOut.write(currentCode, W);

                // Update trackers for used entry (only if already tracked)
                String currentStr = null;
                if (lruPolicy || lfuPolicy) {
                    currentStr = current.toString();
                    if (lruPolicy && lruTracker.contains(currentStr)) {
                        lruTracker.use(currentStr);
                    } else if (lfuPolicy && lfuTracker.contains(currentStr)) {
                        lfuTracker.use(currentStr);
                    }
                }

                // Handle dictionary management
                if (nextCode < maxCode) {
                    if (nextCode >= (1 << W) && W < maxW) W++;

                    // Eviction at capacity
                    if (nextCode == maxCode - 1) {
                        if (lruPolicy) {
                            String lruEntry = lruTracker.findLRU();
                            if (lruEntry != null) {
                                codebook.put(new StringBuilder(lruEntry), null);
                                lruTracker.remove(lruEntry);
                            }
                        } else if (lfuPolicy) {
                            String lfuEntry = lfuTracker.findLFU();
                            if (lfuEntry != null) {
                                codebook.put(new StringBuilder(lfuEntry), null);
                                lfuTracker.remove(lfuEntry);
                            }
                        }
                    }

                    // Add new entry
                    String nextStr = next.toString();
                    codebook.put(next, nextCode);

                    // Track new entry
                    if (lruPolicy) {
                        lruTracker.use(nextStr);
                    } else if (lfuPolicy) {
                        lfuTracker.use(nextStr);
                    }

                    nextCode++;
                } else if (resetPolicy) {
                    // Handle reset policy
                    if (nextCode >= (1 << W) && W < maxW) W++;
                    BinaryStdOut.write(RESET_CODE, W);

                    // Reset codebook
                    codebook = new TSTmod<>();
                    for (int i = 0; i < alphabetSize; i++)
                        codebook.put(alphabetKeys[i], i);

                    nextCode = initialNextCode;
                    W = minW;
                }
                current = new StringBuilder().append(c);
            }
        }

        // Output final code
        if (current.length() > 0) {
            BinaryStdOut.write(codebook.get(current), W);

            // Final tracker update
            if (lruPolicy || lfuPolicy) {
                String currentStr = current.toString();
                if (lruPolicy && lruTracker.contains(currentStr)) {
                    lruTracker.use(currentStr);
                } else if (lfuPolicy && lfuTracker.contains(currentStr)) {
                    lfuTracker.use(currentStr);
                }
            }
        }

        // Write EndCode
        if (nextCode >= (1 << W) && W < maxW) W++;
        BinaryStdOut.write(EndCode, W);
        BinaryStdOut.close();
    }

    // Expansion with all policies
    private static void expand() {
        Header h = readHeader();
        int alphabetSize = h.alphabet.size();
        int maxCode = (1 << h.maxW);
        
        // Policy flags
        boolean resetPolicy = h.policy.equals("reset");
        boolean lruPolicy = h.policy.equals("lru");
        boolean lfuPolicy = h.policy.equals("lfu");

        String[] decodingTable = new String[maxCode];
        for (int i = 0; i < alphabetSize; i++)
            decodingTable[i] = h.alphabet.get(i);

        // Create policy trackers
        LRUTrackerDecoder lruTracker = lruPolicy ? new LRUTrackerDecoder(maxCode) : null;
        LFUTrackerDecoder lfuTracker = lfuPolicy ? new LFUTrackerDecoder(maxCode) : null;

        int EndCode = alphabetSize;
        int RESET_CODE = resetPolicy ? alphabetSize + 1 : -1;
        int initialNextCode = resetPolicy ? alphabetSize + 2 : alphabetSize + 1;
        int nextCode = initialNextCode;
        int W = h.minW;

        if (BinaryStdIn.isEmpty()) { 
            BinaryStdOut.close(); 
            return; 
        }

        int prevCode = BinaryStdIn.readInt(W);
        if (prevCode == EndCode) { 
            BinaryStdOut.close(); 
            return; 
        }

        String val = decodingTable[prevCode];
        BinaryStdOut.write(val);

        // Main decoding loop
        while (!BinaryStdIn.isEmpty()) {
            if (nextCode >= (1 << W) && W < h.maxW) W++;

            int codeword = BinaryStdIn.readInt(W);
            if (codeword == EndCode) break;

            if (resetPolicy && codeword == RESET_CODE) {
                // Reset decoding table
                Arrays.fill(decodingTable, alphabetSize, decodingTable.length, null);

                nextCode = initialNextCode;
                W = h.minW;

                // Restart after reset
                codeword = BinaryStdIn.readInt(W);
                if (codeword == EndCode) break;

                val = decodingTable[codeword];
                BinaryStdOut.write(val);
                continue;
            }

            String s = decodingTable[codeword];
            if (s == null) s = val + val.charAt(0);

            BinaryStdOut.write(s);

            if (nextCode < maxCode) {
                // Eviction at capacity
                if (nextCode == maxCode - 1) {
                    if (lruPolicy) {
                        int lruCode = lruTracker.findLRU();
                        if (lruCode != -1) {
                            decodingTable[lruCode] = null;
                            lruTracker.remove(lruCode);
                        }
                    } else if (lfuPolicy) {
                        int lfuCode = lfuTracker.findLFU();
                        if (lfuCode != -1) {
                            decodingTable[lfuCode] = null;
                            lfuTracker.remove(lfuCode);
                        }
                    }
                }

                decodingTable[nextCode] = val + s.charAt(0);

                // Track new entry
                if (lruPolicy) {
                    lruTracker.use(nextCode);
                } else if (lfuPolicy) {
                    lfuTracker.use(nextCode);
                }

                nextCode++;
            }

            // Update trackers for used code AFTER adding new entry
            if (codeword >= alphabetSize + 1) {
                if (lruPolicy) {
                    lruTracker.use(codeword);
                } else if (lfuPolicy) {
                    lfuTracker.use(codeword);
                }
            }

            val = s;
        }

        BinaryStdOut.close();
    }
}
